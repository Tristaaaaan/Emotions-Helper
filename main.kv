<RoundedButton@Button>:
    background_color: 0,0,0,0
    background_normal:''
    text_size:self.size
    bold: True
    height: 40
    valign:'middle'
    halign:'center'
    font_size:dp(20)
    canvas.before:
        Color:
            rgba:(0,152/255,153/255,1)if self.state=='normal' else (0,.7,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]

<HighlightRoundedButton@Button>:
    background_color: 0,0,0,0
    background_normal:''
    text_size:self.size
    bold: True
    height:40
    valign:'middle'
    halign:'center'
    font_size:dp(20)
    canvas.before:
        Color:
            rgba:(248/255, 81/255, 81/255, 255/255)if self.state=='normal' else (0,.7,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(10)]


<Main>:
    size_hint:1,1
    padding:0
    spacing:0
    orientation:"vertical"
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        id:header
        size_hint:1,None
        height:dp(40)
        padding:10
        orientation:'horizontal'
        canvas.before:
            Color:
                #rgba:(29/255.0,26/255.0,73/255.0,1)
                rgba:(0,152/255,153/255,1)
            Rectangle:
                pos:self.pos
                size:self.size
        Label:
            text:'Emotions Helper'
            font_size:dp(18)
            bold:True
            text_size:self.size
            halign:'center'
            font_name: 'assets/fonts/Lexend-Bold.ttf'
            valign:'center'
            color:(1,1,1,1)

    BoxLayout:
        id:dynamic_box
        size_hint:1,1
        padding:0
        orientation:'vertical'